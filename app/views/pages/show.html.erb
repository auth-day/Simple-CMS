<%= link_to("<< Back link", {:action => "index"})%>
<h2>Show Page information</h2>

<div>
<table >
    <tr>
      <th>User</th>
      <td><%= @page.subject.name%></td>
    </tr>
    <tr>
    <th>Name</th>
    <td><%= @page.name%></td>
    </tr>
    <tr>
    <th>Permalink</th>
    <td><%= @page.permalink%></td>
    </tr>
    <tr>
    <th>Position</th>
    <td><%= @page.position%></td>
    </tr>
    <tr>
    <th>Visible</th>
    <td><%= status_tag(@page.visible)%></td>
    </tr>
    <tr>
    <th>Created_at</th>
    <td><%= @page.created_at%></td>
    </tr>
    <tr>
    <th>Updated_at</th>
    <td><%= @page.updated_at%></td>
    </tr>
</table>
</div>
